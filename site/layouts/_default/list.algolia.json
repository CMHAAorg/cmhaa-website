{{/* Generates a valid Algolia search index */}}
{{- $.Scratch.Add "index" slice -}}
{{- $section := $.Site.GetPage "section" .Section }}
{{- range .Site.AllPages.ByPublishDate -}}
  {{- if and (eq .Type "resources") (ne .Permalink "/resources/") -}}
    {{- if or (and (.IsDescendant $section) (and (not .Draft) (not .Params.private))) $section.IsHome -}}
      {{- $post_date := dateFormat "Jan 02, 2006" .Params.date -}}
      {{- $post_date_timestamp := mul 1000 (time .Params.date).Unix -}}
      {{- $category_tag := .Params.category | urlize -}}
      {{- $banner_image := "" -}}
      {{- if .Params.banner_image -}}
        {{- $banner_image = .Params.banner_image -}}
      {{- else if .Params.banner_right_image -}}
        {{- $banner_image = .Params.banner_right_image -}}
      {{- end -}}
      {{- with $banner_image }}
        {{- $path := resources.Get $banner_image -}} 
        {{- $banner_image = ($path.Fill "560x400").RelPermalink }}
      {{- end }}    
      {{- $.Scratch.Add "index" (dict "objectID" .File.UniqueID "permalink" .Permalink "title" .Title "post_date" $post_date "post_date_timestamp" $post_date_timestamp "banner_image" $banner_image "type" .Type "category" .Params.category "category_tag" $category_tag "focus" .Params.focus "role" .Params.role "organisation_size" .Params.organisation_size "industry" .Params.industry )}}
    {{- end -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}


